# Environment variables for Google Cloud deployment
# Copy this file to .env.production and fill in your values

# Google Cloud Project Configuration
GCP_PROJECT_ID=zyniq-core
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Database Configuration (Cloud SQL)
POSTGRES_USER=zyniq-core-llm
POSTGRES_PASSWORD=r)&o`(B^N<Y4,6[*
POSTGRES_DB=llm
# Format: postgresql+psycopg://user:password@/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE
POSTGRES_DSN=postgresql+psycopg://zyniq-core-llm:r)&o`(B^N<Y4,6[*@/llm?host=/cloudsql/zyniq-core:europe-west4:zyniq-core-llm

# Redis Configuration (Memorystore)
# Format: redis://HOST:6379/0
REDIS_URL=default:10.128.0.3:6379

# Ollama Configuration
OLLAMA_BASE_URL=https://ollama-service-xxxxx-uc.a.run.app
OLLAMA_MODELS=jimscard/whiterabbit-neo,thirty3/kali,qwen2.5:32b-instruct,qwen2.5-coder:14b,mistral-nemo:12b-instruct,nomic-embed-text

# Security Configuration
JWT_SECRET=7e9fbe99007df1033b23ebdfb78941f7
ADMIN_EMAIL=admin_ibrahim@zyniq.solutions

# OAuth Configuration (Optional)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://your-api-domain.com

# Monitoring Configuration
