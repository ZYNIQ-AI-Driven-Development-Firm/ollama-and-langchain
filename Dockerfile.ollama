# Production Ollama image with model preloading
FROM ollama/ollama:latest

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy bootstrap script
COPY ollama_bootstrap.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/ollama_bootstrap.sh

# Create data directory
RUN mkdir -p /root/.ollama

# Pre-pull a lightweight model for faster startup
RUN ollama serve & sleep 5 && \
    ollama pull jimscard/whiterabbit-neo && \
    ollama pull thirty3/kali && \
    pkill ollama

# Health check
HEALTHCHECK --interval=60s --timeout=30s --start-period=180s --retries=3 \
    CMD curl -f http://localhost:11434/api/ps || exit 1

EXPOSE 11434

CMD ["/usr/local/bin/ollama_bootstrap.sh"]
